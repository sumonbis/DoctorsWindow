<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical"
            android:padding="5dp" >

            <EditText
                android:id="@+id/userNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false" >
            </EditText>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false" >
            </EditText>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/qualificationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Qualification" >
            </EditText>

            <Spinner
                android:id="@+id/specialitySpinner"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/yellow"
                android:padding="8dp" />

            <EditText
                android:id="@+id/designatonEditText"
                android:layout_width="match_parent"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Designation" >
            </EditText>

            <EditText
                android:id="@+id/instituteEditText"
                android:layout_width="match_parent"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Institute" >
            </EditText>

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:layout_height="70dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/phoneNoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Phone No."
                android:inputType="phone" />

            <EditText
                android:id="@+id/mobNoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Mobile No."
                android:inputType="phone" />

            <EditText
                android:id="@+id/visitingTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Visiting time" />

            <EditText
                android:id="@+id/noOfPatientEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="8dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Number of patient per day"
                android:inputType="number" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Update" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>